<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF" >

    <!-- 搜索框 -->

    <RelativeLayout
        android:id="@+id/search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/settings_header_bg"
        android:padding="3dip" >

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="fill_parent"
            android:layout_height="46dip"
            android:layout_marginLeft="7dip"
            android:layout_marginRight="7dip"
            android:layout_marginTop="2.5dip"
            android:focusable="false"
            android:hint="请输入搜索关键字"
            android:paddingLeft="73dip"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="78dip"
            android:layout_height="46dip"
            android:layout_alignParentLeft="true"
            android:background="@drawable/search_choice_goods_nm" />

        <ImageView
            android:layout_width="50dip"
            android:layout_height="46dip"
            android:layout_toLeftOf="@+id/imgPhoto"
            android:background="@drawable/voice_search_nm2" />

        <ImageView
            android:id="@+id/imgPhoto"
            android:layout_width="61dip"
            android:layout_height="46dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/bar_search_nm" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/populate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/populate_on" />

        <ImageView
            android:id="@+id/credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/credit_nm" />

        <ImageView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/price_nm" />

        <ImageView
            android:id="@+id/seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/seller_nm" />
    </LinearLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title" >
    </ListView>

</RelativeLayout>